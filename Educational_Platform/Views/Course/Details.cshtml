@model Course
@{
    ViewData["Title"] = "Create Course";
    ViewBag.Layout = "~/Views/Shared/instructorLayout.cshtml";

}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3>Course Details</h3>
        </div>
        <div class="card-body">
            <div class="form-group row">
                <label asp-for="Title" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Title" class="form-control-plaintext" readonly />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <textarea asp-for="Description" class="form-control-plaintext" readonly rows="3"></textarea>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Duration" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Duration" class="form-control-plaintext" readonly />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Price" class="form-control-plaintext" readonly />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="status" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="status" class="form-control-plaintext" readonly />
                </div>
            </div>

            <div class="form-group row mt-4">
                <div class="col-sm-10 offset-sm-2">
                    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>