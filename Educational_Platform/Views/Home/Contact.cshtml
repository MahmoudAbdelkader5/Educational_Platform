@{
    ViewData["Title"] = "Contact";
    @Html.Partial("~/Views/Shared/Styling.cshtml")
    Layout = null;
}
@Html.Partial("_Header")
<style>
    .fo {
        font-family: "Cairo", sans-serif;
    }
</style>
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3 fo">تواصل معنا</h6>
            <h1 class="mb-5 fo">راسلنا لأي استفسار</h1>
        </div>
        <div class="row justify-content-center g-4">
            <div class="col-lg-6 col-md-12 wow fadeInUp" data-wow-delay="0.5s">
                <form>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control fo" id="name" placeholder="الاسم" dir="rtl" style="text-align: right;">
                                <label for="name">الاسم</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="email" class="form-control fo" id="email" placeholder="البريد الإلكتروني" dir="rtl" style="text-align: right;">
                                <label for="email">البريد الإلكتروني</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input type="text" class="form-control fo" id="subject" placeholder="الموضوع" dir="rtl" style="text-align: right;">
                                <label for="subject">الموضوع</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <textarea class="form-control" placeholder="اكتب رسالتك هنا" id="message" style="height: 150px; text-align: right;" dir="rtl"></textarea>
                                <label for="message">الرسالة</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary w-100 py-3 fo" type="submit">إرسال الرسالة</button>
                        </div>
                    </div>
                </form>
            </div>



            <div class="col-lg-6 col-md-12 wow fadeInUp fo" data-wow-delay="0.1s" dir="rtl">
                <h5 class="fo">ابقَ على تواصل</h5>
                <p class="mb-4">
                    تواصل معنا دائمًا في أي وقت يناسبك،<br /> فنحن هنا لخدمتك والإجابة عن جميع استفساراتك. <br /> سواء كان لديك سؤال بخصوص الدروس، أو تواجه أي مشكلة فنية.
                </p>

                <div class="d-flex align-items-center mb-3">
                    <div class="d-flex align-items-center justify-content-center flex-shrink-0 bg-primary" style="width: 50px; height: 50px;">
                        <i class="fa fa-map-marker-alt text-white"></i>
                    </div>
                    <div class="me-3">
                        <h5 class="text-primary fo">المكتب</h5>
                        <p class="mb-0">123 شارع، الفيوم، مصر</p>
                    </div>
                </div>

                <div class="d-flex align-items-center mb-3">
                    <div class="d-flex align-items-center justify-content-center flex-shrink-0 bg-primary" style="width: 50px; height: 50px;">
                        <i class="fa fa-phone-alt text-white"></i>
                    </div>
                    <div class="me-3">
                        <h5 class="text-primary fo">الهاتف</h5>
                        <p class="mb-0">0101 153 1956</p>
                    </div>
                </div>

                <div class="d-flex align-items-center">
                    <div class="d-flex align-items-center justify-content-center flex-shrink-0 bg-primary" style="width: 50px; height: 50px;">
                        <i class="fa fa-envelope-open text-white"></i>
                    </div>
                    <div class="me-3">
                        <h5 class="text-primary fo">البريد الإلكتروني</h5>
                        <p class="mb-0">alaa422@gmail.com</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- نهاية قسم التواصل -->
<!-- Contact End -->
@Html.Partial("_Footer") 