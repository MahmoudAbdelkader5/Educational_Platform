@{
}
<style>
    .arfont {
        font-family: "Cairo", sans-serif;
        font-size: larger;
    }

    .logo {
        font-family: 'Cairo', sans-serif;
        font-size: 2rem;
        color: #06BBCC; /* Bootstrap primary blue */
        display: inline-flex;
        align-items: center;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
        transition: color 0.3s ease;
    }

        .logo i {
            font-size: 1.6rem;
            margin-left: 0.5rem;
            transition: transform 0.3s ease;
        }

        .logo:hover {
            color: #035F69; /* Darker on hover */
        }

            .logo:hover i {
                transform: rotate(15deg) translateY(-2px);
            }
</style>
<!-- Navbar Start -->
<nav class="navbar navbar-expand-lg bg-white navbar-light shadow sticky-top p-0">
    <a href="" class="navbar-brand d-flex align-items-center px-4 px-lg-5">
        <h1 asp-controller="Home" asp-action="Index" class="m-0 logo">
            <i class="fa fa-book ms-3"></i> مفهوم
        </h1>
    </a>
    <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
        <div class="navbar-nav ms-auto p-4 p-lg-0">
            <ul class="navbar-nav ms-auto p-4 p-lg-0">
                <li class="nav-item">
                    @Html.ActionLink("الرئيسية", "Index", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("من نحن", "About", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("الكورسات", "Courses", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("تواصل معنا", "Contact", "Home", null, new { @class = "nav-link" })
                </li>
            </ul>
            @if (User.Identity.IsAuthenticated)
            {
                <div class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        @if (!string.IsNullOrEmpty(User.FindFirst("ProfilePicture")?.Value))
                        {
                            <img src="~/images/profiles/@User.FindFirst("ProfilePicture").Value" alt="Profile"
                                 class="rounded-circle me-2" width="32" height="32" style="object-fit: cover;">
                        }
                        @User.Identity.Name
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#">Profile</a></li>
                        <li><a class="dropdown-item" href="#">Settings</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>@Html.ActionLink("Logout", "SignOut", "Account", null, new { @class = "dropdown-item" })</li>
                    </ul>
                </div>
            }
            else
            {
                @Html.ActionLink("انضم الينا", "Login", "Account", null, new { @class = "arfont btn btn-primary py-2 px-4 ms-3 d-lg-inline-flex" })
            }
        </div>
    </div>
</nav>
<!-- Navbar End -->