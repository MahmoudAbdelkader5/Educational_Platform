@model IEnumerable<Assignment>
@{
    ViewData["Title"] = "الواجبات المتاحة";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap 5 RTL -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Google Fonts - Tajawal -->
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700;900&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Tajawal', sans-serif;
            background-color: #f8f9fa;
        }

        .assignment-card {
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            transition: all 0.3s;
            border: none;
        }

            .assignment-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            }

        .assignment-header {
            background: linear-gradient(135deg, #6c4df6, #8e6efd);
            color: white;
            border-radius: 10px 10px 0 0;
            padding: 15px;
        }

        .assignment-body {
            padding: 20px;
        }

        .badge-duration {
            background-color: rgba(108, 77, 246, 0.1);
            color: #6c4df6;
        }

        .btn-start {
            background: linear-gradient(135deg, #6c4df6, #8e6efd);
            border: none;
            border-radius: 30px;
        }

            .btn-start:hover {
                background: linear-gradient(135deg, #5b3de5, #7d5df4);
            }

        .empty-state {
            background-color: white;
            border-radius: 10px;
            padding: 40px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <!-- Header -->
        <div class="text-center mb-5">
            <h1 class="fw-bold">الواجبات المتاحة</h1>
            @if (Model.Any() && Model.First().Lesson != null)
            {
                <p class="text-muted">درس: @Model.First().Lesson.Title</p>
            }
        </div>

        <!-- Assignments List -->
        @if (!Model.Any())
        {
            <div class="empty-state text-center">
                <i class="fas fa-tasks fa-4x text-muted mb-4"></i>
                <h3 class="mb-3">لا توجد واجبات متاحة حالياً</h3>
                <p class="text-muted mb-4">سيتم إضافة واجبات جديدة قريباً</p>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var assignment in Model)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="assignment-card h-100">
                            <div class="assignment-header">
                                <h5 class="mb-0">@assignment.Title</h5>
                            </div>
                            <div class="assignment-body">
                                <div class="d-flex justify-content-between mb-3">
                                    <span class="badge badge-duration py-2 px-3">
                                        <i class="fas fa-clock me-2"></i> @assignment.duration دقيقة
                                    </span>
                                    <span class="badge bg-light text-dark py-2 px-3">
                                        <i class="fas fa-star me-2"></i> @assignment.MaxGrade نقاط
                                    </span>
                                </div>

                                @if (assignment.Lesson != null)
                                {
                                    <p class="text-muted mb-4">
                                        <i class="fas fa-book me-2"></i> @assignment.Lesson.Title
                                    </p>
                                }

                                <a asp-action="TakeAssessment" asp-route-assessmentId="@assignment.ID"
                                   class="btn btn-start w-100 py-2">
                                    <i class="fas fa-play-circle me-2"></i> بدء الواجب
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Simple animation for cards
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.assignment-card');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                card.style.transition = 'all 0.3s ease';
                setTimeout(() => {
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, 100 * index);
            });
        });
    </script>
</body>
</html>