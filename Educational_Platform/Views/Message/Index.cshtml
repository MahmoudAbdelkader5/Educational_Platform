@model IEnumerable<Message>
@{
    ViewData["Title"] = "رسائل الصفحة";
    ViewBag.Layout = "~/Views/Shared/instructorLayout.cshtml";
}

<div class="container-fluid py-4" dir="rtl">
    <div class="card shadow-lg">
        <div class="card-header bg-gradient-primary text-white py-3">
            <div class="row align-items-center">
                <div class="col">
                    <h2 class="h4 mb-0 text-center text-white">
                        <i class="fas fa-envelope ml-2"></i> الرسائل المستلمة
                    </h2>
                </div>
                <div class="col-auto">
                    <span class="badge bg-white text-primary fs-6">
                        <i class="fas fa-inbox me-1"></i> @Model.Count() رسالة
                    </span>
                </div>
            </div>
        </div>

        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th width="15%" class="pe-4 py-3 text-uppercase small fw-bold">المرسل</th>
                            <th width="20%" class="pe-4 py-3 text-uppercase small fw-bold">البريد الإلكتروني</th>
                            <th width="15%" class="pe-4 py-3 text-uppercase small fw-bold">العنوان</th>
                            <th width="30%" class="pe-4 py-3 text-uppercase small fw-bold">نص الرسالة</th>
                            <th width="20%" class="pe-4 py-3 text-uppercase small fw-bold text-center">الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var message in Model)
                        {
                            <tr class="position-relative message-row ">
                                <td class="pe-4 fw-bold">@message.Name</td>
                                <td class="pe-4">
                                    <a href="mailto:@message.Email" class="text-primary">
                                        @message.Email
                                    </a>
                                </td>
                                <td class="pe-4">@message.Subject</td>
                                <td class="pe-4">
                                    <span class="message-preview" data-bs-toggle="modal" data-bs-target="#messageModal_@message.MessageID">
                                        @(message.MessageBody.Length > 30 ? message.MessageBody.Substring(0, 30) + "..." : message.MessageBody)
                                    </span>
                                </td>
                                <td class="pe-4">
                                    <div class="d-flex justify-content-center">
                                        <a href="mailto:@message.Email?subject=رد على رسالتك&body=شكرا لتواصلك معنا على منصة مفهوم."
                                           class="btn btn-sm btn-primary me-2" title="الرد">
                                            <i class="fas fa-reply"></i>
                                        </a>

                                       

                                        <form asp-action="DeleteMessage" asp-route-id="@message.MessageID" method="post"
                                              class="d-inline" onsubmit="return confirm('هل أنت متأكد من حذف هذه الرسالة؟');">
                                            <button type="submit" class="btn btn-sm btn-danger" title="حذف">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>

                            <!-- Message Modal -->
                            <div class="modal fade" id="messageModal_@message.MessageID" tabindex="-1"
                                 aria-labelledby="messageModalLabel_@message.MessageID" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered modal-lg">
                                    <div class="modal-content">
                                        <div class="modal-header bg-primary text-white">
                                            <h5 class="modal-title" id="messageModalLabel_@message.MessageID">
                                                <i class="fas fa-envelope-open-text me-2"></i> تفاصيل الرسالة
                                            </h5>
                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="إغلاق"></button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="row mb-3">
                                                <div class="col-md-6">
                                                    <p><strong><i class="fas fa-user me-2"></i>الاسم:</strong> @message.Name</p>
                                                </div>
                                                <div class="col-md-6">
                                                    <p>
                                                        <strong><i class="fas fa-envelope me-2"></i>البريد الإلكتروني:</strong>
                                                        <a href="mailto:@message.Email" class="text-primary">@message.Email</a>
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <div class="col-12">
                                                    <p><strong><i class="fas fa-tag me-2"></i>الموضوع:</strong> @message.Subject</p>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-12">
                                                    <p><strong><i class="fas fa-align-left me-2"></i>الرسالة:</strong></p>
                                                    <div class="border p-3 rounded bg-light">
                                                        @message.MessageBody
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <a href="mailto:@message.Email?subject=رد على رسالتك&body=شكرا لتواصلك معنا على منصة مفهوم."
                                               class="btn btn-primary me-2">
                                                <i class="fas fa-reply me-2"></i> الرد
                                            </a>
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                <i class="fas fa-times me-2"></i> إغلاق
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @if (Model.Any())
        {
            <div class="card-footer bg-light">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <p class="mb-0 text-muted">
                            <i class="fas fa-filter me-2"></i>
                            <span class="fw-bold">@Model.Count()</span> رسالة معروضة
                        </p>
                    </div>
                    
                </div>
            </div>
        }
        else
        {
            <div class="card-footer bg-light text-center py-4">
                <div class="empty-state">
                    <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                    <h5 class="text-muted">لا توجد رسائل لعرضها</h5>
                </div>
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        .message-row {
            transition: all 0.3s ease;
        }

            .message-row:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0,0,0,0.05);
            }

        .unread {
            background-color: rgba(45, 206, 137, 0.08);
            border-left: 4px solid #2dce89;
        }

        .message-preview {
            cursor: pointer;
            transition: color 0.2s;
        }

            .message-preview:hover {
                color: #2dce89;
                text-decoration: underline;
            }

        .bg-gradient-primary {
            background: linear-gradient(87deg, #2dce89 0, #2dcecc 100%) !important;
        }

        .empty-state {
            opacity: 0.6;
        }

        .modal-content {
            border: none;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize tooltips
            $('[title]').tooltip({
                placement: 'top',
                trigger: 'hover'
            });

            // Print functionality
            $('#printBtn').click(function () {
                window.print();
            });

            // Mark as read when viewing message
            $('.message-preview').click(function() {
                $(this).closest('tr').removeClass('unread');
            });
        });
    </script>
}