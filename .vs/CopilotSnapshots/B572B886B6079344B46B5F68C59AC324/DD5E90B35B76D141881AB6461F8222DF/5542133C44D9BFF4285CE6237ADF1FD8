                                    {
                                        <div class="mt-3">
                                            <div class="d-flex align-items-center flex-wrap gap-2">
                                                @{
                                                    var fileExtension = System.IO.Path.GetExtension(lesson.SupportingFiles).ToLower();
                                                    var iconClass = "fa-file-alt";
                                                    var badgeClass = "bg-info";

                                                    // Set appropriate icon and color based on file type
                                                    switch (fileExtension)
                                                    {
                                                        case ".pdf":
                                                            iconClass = "fa-file-pdf";
                                                            badgeClass = "bg-danger";
                                                            break;
                                                        case ".doc":
                                                        case ".docx":
                                                            iconClass = "fa-file-word";
                                                            badgeClass = "bg-primary";
                                                            break;
                                                        case ".xls":
                                                        case ".xlsx":
                                                            iconClass = "fa-file-excel";
                                                            badgeClass = "bg-success";
                                                            break;
                                                        case ".ppt":
                                                        case ".pptx":
                                                            iconClass = "fa-file-powerpoint";
                                                            badgeClass = "bg-warning";
                                                            break;
                                                        case ".zip":
                                                        case ".rar":
                                                            iconClass = "fa-file-archive";
                                                            badgeClass = "bg-secondary";
                                                            break;
                                                        case ".jpg":
                                                        case ".jpeg":
                                                        case ".png":
                                                        case ".gif":
                                                            iconClass = "fa-file-image";
                                                            badgeClass = "bg-purple";
                                                            break;
                                                    }

                                                    // Get file size (you would need to implement this in your controller)
                                                    var fileSize = ViewBag.FileSizes?[lesson.SupportingFiles] ?? "N/A";
                                                }

                                                <span class="badge @badgeClass bg-opacity-10 text-dark py-2 px-3 border-0">
                                                    <i class="fas @iconClass me-2"></i>
                                                    @fileExtension.ToUpper().TrimStart('.')
                                                    <span class="ms-2">@fileSize</span>
                                                </span>

                                                <a href="~/files/supporting/@lesson.SupportingFiles"
                                                   class="btn btn-sm btn-outline-primary rounded-2"
                                                   download="@($"واجب - {lesson.Title}{fileExtension}")"
                                                   title="تحميل الملف">
                                                    <i class="fas fa-download me-1"></i> تحميل الواجب
                                                </a>

                                                <button class="btn btn-sm btn-outline-secondary rounded-2 preview-file"
                                                        data-file-url="~/files/supporting/@lesson.SupportingFiles"
                                                        data-file-type="@fileExtension"
                                                        title="معاينة الملف">
                                                    <i class="fas fa-eye me-1"></i> معاينة
                                                </button>
                                            </div>

                                            <!-- File preview modal (add this at the bottom of your page) -->
                                            <div class="modal fade" id="filePreviewModal" tabindex="-1" aria-hidden="true">
                                                <div class="modal-dialog modal-lg">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">معاينة الملف</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <div id="pdfPreview" class="d-none w-100" style="height: 70vh;"></div>
                                                            <img id="imagePreview" class="img-fluid d-none" src="" alt="معاينة الصورة">
                                                            <div id="unsupportedPreview" class="d-none text-center py-5">
                                                                <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                                                                <h5>المعاينة غير متاحة لهذا النوع من الملفات</h5>
                                                                <p class="text-muted">يمكنك تحميل الملف لعرضه على جهازك</p>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <a id="downloadFromPreview" href="#" class="btn btn-primary" download>
                                                                <i class="fas fa-download me-1"></i> تحميل الملف
                                                            </a>
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إغلاق</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        @section Scripts {
                                            <script>
                                                $(document).ready(function() {
                                                    // PDF.js for PDF preview (make sure to include PDF.js library)
                                                    pdfjsLib = window['pdfjs-dist/build/pdf'];
                                                    pdfjsLib.GlobalWorkerOptions.workerSrc = 'https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.11.338/pdf.worker.min.js';

                                                    // File preview handler
                                                    $('.preview-file').click(function() {
                                                        const fileUrl = $(this).data('file-url');
                                                        const fileType = $(this).data('file-type');
                                                        const previewModal = new bootstrap.Modal('#filePreviewModal');

                                                        // Reset all previews
                                                        $('#pdfPreview').addClass('d-none');
                                                        $('#imagePreview').addClass('d-none');
                                                        $('#unsupportedPreview').addClass('d-none');

                                                        // Set download link
                                                        $('#downloadFromPreview').attr('href', fileUrl);

                                                        // Handle different file types
                                                        if (fileType === '.pdf') {
                                                            // PDF Preview
                                                            $('#pdfPreview').removeClass('d-none');

                                                            // Loading PDF
                                                            const loadingTask = pdfjsLib.getDocument(fileUrl);
                                                            loadingTask.promise.then(function(pdf) {
                                                                pdf.getPage(1).then(function(page) {
                                                                    const scale = 1.5;
                                                                    const viewport = page.getViewport({ scale: scale });

                                                                    const canvas = document.createElement('canvas');
                                                                    const context = canvas.getContext('2d');
                                                                    canvas.height = viewport.height;
                                                                    canvas.width = viewport.width;

                                                                    const renderContext = {
                                                                        canvasContext: context,
                                                                        viewport: viewport
                                                                    };

                                                                    $('#pdfPreview').html(canvas);
                                                                    page.render(renderContext);
                                                                });
                                                            }).catch(function(error) {
                                                                console.error('PDF preview error:', error);
                                                                $('#pdfPreview').html('<div class="alert alert-danger">تعذر تحميل معاينة PDF</div>');
                                                            });
                                                        }
                                                        else if (['.jpg', '.jpeg', '.png', '.gif'].includes(fileType)) {
                                                            // Image Preview
                                                            $('#imagePreview').removeClass('d-none').attr('src', fileUrl);
                                                        }
                                                        else {
                                                            // Unsupported file type
                                                            $('#unsupportedPreview').removeClass('d-none');
                                                        }

                                                        previewModal.show();
                                                    });
                                                });
                                            </script>
                            }
                                    }
                                    }
                                </div>
                            </div>
                            <div class="dropdown flex-shrink-0">
                                <button class="btn btn-sm btn-outline-secondary rounded-circle" type="button"
                                        id="lessonActions-@lesson.ID" data-bs-toggle="dropdown"
                                        aria-expanded="false" style="width: 36px; height: 36px;">
                                    <i class="fas fa-ellipsis-v"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end shadow-sm rounded-2 border-0"
                                    aria-labelledby="lessonActions-@lesson.ID">
                                    <li><a class="dropdown-item py-2" asp-action="Edit" asp-route-id="@lesson.ID"><i class="fas fa-edit me-2 text-primary"></i>تعديل</a></li>
                                    <li><a class="dropdown-item py-2 text-danger" href="#" data-bs-toggle="modal" data-bs-target="#deleteLessonModal" data-lesson-id="@lesson.ID"><i class="fas fa-trash me-2"></i>حذف</a></li>
                                    <li><a class="dropdown-item py-2" href="#"><i class="fas fa-share me-2 text-info"></i>مشاركة</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {

            }
        </div>
    </div>
</div>

